@model TravelMe_webapp.Models.Post

@using TravelMe.Utils;

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-3 col-xs-4 image-post">
        <img class="thumbnail-img" src="@Model.ImageUrl" alt="" style="width:100%;height:auto;padding:10px;" />
    </div>


    <div class="col-sm-6 col-xs-8 content-post-main">
        <div class="content-post-title-author">
            <h2><b>@Model.Title</b></h2>
            <h5>By: @Model.UserID</h5>
        </div>
        <div>
            <br />
            <span>@Html.Raw(Model.Body)</span>
        </div><br />
    </div>


    <div class="col-sm-3 col-xs-12 content-post-product-details">
        <dl>
            <dt>
                @*@Html.DisplayNameFor(m => m.Publisher)*@
            </dt>
            <dd>
                @*&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(m => m.Publisher)*@
            </dd>
        </dl>
        <dl>
            <dt>
                @Html.DisplayNameFor(m => m.DateAdded)
            </dt>
            <dd>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(m => m.DateAdded)
            </dd>
        </dl>
        <dl>
            <dt>
                @Html.DisplayNameFor(m => m.Place.AvgRating)
            </dt>
            <dd>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(m => m.Place.AvgRating)
            </dd>
        </dl>
        <dl>
            <dt>
                @Html.DisplayNameFor(m => m.Place.NumOfPosts)
            </dt>
            <dd>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(m => m.Place.NumOfPosts)
            </dd>
        </dl>
        <dl>
            <dt>
                @Html.DisplayNameFor(m => m.Rating)
            </dt>
            <dd>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(m => m.Rating)
            </dd>
        </dl>

        @Html.HiddenFor(m => m.PlaceID)

    </div>
</div>
