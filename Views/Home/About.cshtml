@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Subtitle</h3>



<div class="container">
    <div class="row">
        <div class="col-md-5">
            <video autoplay="autoplay" style="width:100%; height:50%;" and loop>
                <source src="~/Content/Media/video.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </div>

        <div class="col-md-7">
            <p>@ViewBag.Description</p>
            <p>@ViewBag.Description</p>
            <p>@ViewBag.Description</p>
        </div>
    </div>
    <div class="row" style="margin-top:20px;">
        <div class="col-md-7">
            <p>@ViewBag.Description</p>
            <p>@ViewBag.Description</p>
            <p>@ViewBag.Description</p>
            <p>@ViewBag.Description</p>
        </div>
        <div class="col-md-5" >
            <canvas id="myCanvas" width="500" height="400" style="border:1px solid #d3d3d3;">
                Your browser does not support the HTML5 canvas tag.
            </canvas>
        </div>
    </div>

</div>

<script>
    var c = document.getElementById("myCanvas");
    var ctx = c.getContext("2d");

    // Create gradient
    var grd = ctx.createLinearGradient(180, 0, 180, 180);
    grd.addColorStop(0, "blue");
    grd.addColorStop(1, "white");

    // Fill with gradient
    ctx.fillStyle = grd;
    ctx.fillRect(0, 0, 500, 400);
</script>