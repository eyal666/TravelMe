@model TravelMe.ViewModel.ThumbnailBoxViewModel

<div class="row">
    @if (Model.Thumbnails != null)
    {
        foreach (var thumbnail in Model.Thumbnails)
        {
            var subStringEnd = thumbnail.Body.Length <= 250 ? thumbnail.Body.Length : 250;
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    <div class="thumbnail-img-container">
                        <a href="@thumbnail.Link">
                            <img class="thumbnail-img" src="@thumbnail.ImageUrl" alt="img" />
                        </a>
                    </div>
                    <div class="caption">
                        <h3><a href="@thumbnail.Link">@thumbnail.Title</a></h3>
                        <p>@Html.Raw(thumbnail.Body.Substring(0, subStringEnd) + "...")</p>
                    </div>
                    <div>
                        <span>Rating:</span>
                        @for (int i = 0; i < thumbnail.Post.Rating; i++)
                        {
                            <span class="glyphicon glyphicon-star"></span>
                        }
                    </div>
                </div>
            </div>
        };
    }
</div>
