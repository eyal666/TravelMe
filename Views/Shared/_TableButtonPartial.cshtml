@model TravelMe.Models.IndividualButtonPartial
@using TravelMe.Models

<td style="width:150px">
    <div role="group">
        @Html.Partial("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
           Action = "Edit",
           ButtonType = "btn-primary",
           Glyph = "pencil",
           Text = "Edit",
           PostId = Model.PostId,
           CategoriesId = Model.CategoriesId,
           PlaceId = Model.PlaceId
        })
        @Html.Partial("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
           Action = "Details",
           ButtonType = "btn-success",
           Glyph = "list",
           Text = "Details",
           PostId = Model.PostId,
           CategoriesId = Model.CategoriesId,
           PlaceId = Model.PlaceId
        })
        @Html.Partial("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
           Action = "Delete",
           ButtonType = "btn-danger",
           Glyph = "trash",
           Text = "Delete",
           PostId = Model.PostId,
           CategoriesId = Model.CategoriesId,
           PlaceId = Model.PlaceId
        })
    </div>
</td>

